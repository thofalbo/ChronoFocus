@model TelaViewModel

<h1>Editar Opção</h1>

<form id="telaForm">
    <input type="hidden" asp-for="Tela.Id" />
    <div class="form-group">
        <label asp-for="Tela.Rota" class="control-label"></label>
        <input asp-for="Tela.Rota" class="form-control" />
    </div>
    <button type="button" class="btn btn-primary" onclick="tela.registrar('telaForm', 'editar')">Editar</button>
</form>

@section scripts {
    <script src="~/js/Pages/tela.js" asp-append-version="true"></script>
    <script>
        $(function () {
            tela.init({
                urls: {
                    editar: '@Url.Action("editar", "tela")',
                    index: '@Url.Action("Index", "Tela")'
                }
            });
        });
    </script>
}