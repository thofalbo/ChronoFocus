
@model IEnumerable<Permissao>

<form method="post" asp-action="BulkUpdate">
    <h1>Permiss√µes</h1>

    <div class="accordion" id="permissionsAccordion">
        @foreach (var controlador in Model.Select(p => p.Controlador).Distinct())
        {
            <div class="accordion-item">
                <h2 class="accordion-header" id="header_@controlador.Nome">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@controlador.Nome" aria-expanded="false" aria-controls="collapse_@controlador.Nome">
                        @controlador.Nome
                    </button>
                </h2>
                <div id="collapse_@controlador.Nome" class="accordion-collapse collapse" aria-labelledby="header_@controlador.Nome" data-bs-parent="#permissionsAccordion">
                    <div class="accordion-body">
                        <ul class="acoes-list">
                            @foreach (var permissao in Model.Where(p => p.Controlador == controlador))
                            {
                                <form method="post">
                                    <input type="hidden" asp-for="@permissao.IdUsuario" />
                                    <input type="hidden" asp-for="@permissao.IdControlador" />
                                    <input type="hidden" asp-for="@permissao.IdAcao" />
                                    <li>
                                        <div style="display: flex; align-items: center;">
                                            <input class="form-check-input" type="checkbox" name="permissions" value="@permissao.IdAcao" @(permissao.Acesso ? "checked" : "") />
                                            <label class="form-check-label ms-2" asp-for="@permissao.Acesso">@permissao.Acao.Nome</label>
                                        </div>
                                    </li>
                                </form>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary" onclick="permissao.fnSubmit('bulkUpdate', 'editar')">Salvar</button>
</form>